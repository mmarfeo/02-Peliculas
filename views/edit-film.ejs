            <% if(film) { %>
                
            <!-- Se crea el formulario de bootstrap-->
            <div class="container mt-4">     
                <div class="card border-secondary">  
                    <div class="card-header">Editar Registro</div>
                    <div class="card-body">
                        <form action="/update-film" method="POST">

                            <input id="id" name="id" value="<%= film.Id %>" hidden>

                            <div class="mb-3">
                            <label for="titulo" class="form-label">Titulo</label>
                            <input type="text" class="form-control" id="titulo" name="titulo" tabindex="1" value="<%= film.titulo %>">
                            </div>   
                            
                            <div class="mb-3">
                            <label for="genero" class="form-label">genero</label>
                            <select id="genero" name="genero" class="form-select" aria-label="Default select example" tabindex="2">
                                <option value="<%= film.genero %>" selected><%= film.genero %></option>
                                <option value="comedia">Comedia</option>
                                <option value="drama">Drama</option>
                                <option value="accion">Acción</option>
                                <option value="romance">Romance</option>
                                <option value="romance">Fantasia</option>                   
                            </select>
                            </div>
                            
<!--                             <div class="mb-3">
                                <input type="hidden" class="form-control" id="fecha_creacion" name="fecha_creacion" tabindex="1" value="$(now.toLocaleDateString())">
                            </div> -->

                            <div class="mb-3">
                                <label for="calificacion" class="form-label">Calificacion</label>
                                <select id="calificacion" name="calificacion" class="form-select" aria-label="Default select example" tabindex="2">
                                    <option value="<%= film.calificacion %>" selected><%= film.calificacion %></option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>                 
                                </select>
                            </div>
                                                                 
                            <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                            <a href="/create-film" class="btn btn-secondary">Cancelar</a>
                        </form>
                    </div>

                    <% } %>



    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

   
  </body>


